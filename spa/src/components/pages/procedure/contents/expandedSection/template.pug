v-expansion-panels(
  multiple
  accordion
  v-model='expanded'
)
  //- Loop through all sections, creating an expansion panel for each one
  v-expansion-panel(
    v-for="(section, i) in sections.sections"
    v-show="section.content"
    :key="i"
  )
    //- Title is always visible
    v-expansion-panel-header.title {{section.title}}
    
    //- Content is collapsible
    v-expansion-panel-content
      templateCompiler(:content="section.content")