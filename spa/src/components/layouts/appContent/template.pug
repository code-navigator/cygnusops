v-content(id="nav")
  //- Page tabs
  //- Need mt-n3 to prevent overflow
  v-tabs.mt-n3(
    hide-slider
    show-arrows
  )
    //- Tab act as router links
    v-tab(
      v-for="(tab, i) in tabs"
      :to="{name: tab.name}"
      :key="i"
      dark
      @click.native="setTab(i)"
    ) {{ tab.name }}

      //- Close button
      v-spacer
        div
          v-btn(v-if="tabs.length > 1"
            small 
            icon 
            @click.prevent="closeTab(i)"
          )
            v-icon(
              small
              color="blue darken-2"
            ) mdi-close-circle

  //- Inject pages here
  router-view